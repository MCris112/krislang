print("=== BASIC FUNCTION CALL ===");
VOID hello(STRING $name) {
    print("Hello " + $name);
}
hello("Bianca");

print("=== MULTIPLE PARAMETERS ===");
VOID greet(STRING $a, STRING $b) {
    print($a + " " + $b);
}
greet("Hello", "World");

print("=== TYPE MISMATCH (should error) ===");
VOID testInt(INT $x) {
    print("X = " + $x);
}
testInt("not an int");   // expect type error

print("=== TOO FEW ARGUMENTS (should error) ===");
VOID foo(INT $x, INT $y) {
    print("OK");
}
foo(10, 11);   // missing argument

print("=== TOO MANY ARGUMENTS (should error) ===");
VOID bar(STRING $x) {
    print($x);
}
bar("A");   // too many arguments

print("=== SHADOWING TEST ===");
STRING $name = "Global";
VOID show(STRING $name) {
    print("Inside: " + $name);
}
show("Local");
print("Outside: " + $name);

print("=== NESTED FUNCTION CALLS ===");
VOID shout(STRING $x) {
    print("!!! " + $x + " !!!");
}
VOID say(STRING $x) {
    shout($x);
}
say("Nested");

print("=== FUNCTION CALLING FUNCTION ===");
VOID add(INT $a, INT $b) {
    print($a + $b);
}
VOID calc() {
    add(10, 20);
}
calc();

print("=== OUTER SCOPE ACCESS (should error unless closures supported) ===");
INT $x = 10;
VOID testScope() {
    print($x);   // should error: not in function scope
}
testScope();

print("=== PARAMETER SHADOWING GLOBAL ===");
STRING $msg = "Global";
VOID echo(STRING $msg) {
    print("Param: " + $msg);
}
echo("Local");
print("Global: " + $msg);

print("=== EXPRESSION ARGUMENTS ===");
VOID show(STRING $x) {
    print($x);
}
show("Hello " + "World");

print("=== FUNCTION CALL AS ARGUMENT ===");
VOID wrap(STRING $x) {
    print("[" + $x + "]");
}
wrap("Made");

print("=== RECURSION TEST ===");
VOID count(INT $n) {
    print($n);
    if ($n == 0) {
        return;
    }
    count($n - 1);
}
count(5);

print("=== MANY CALLS (memory stress test) ===");
VOID ping(STRING $x) {
    print($x);
}
ping("A");
ping("B");
ping("C");
ping("D");
ping("E");
ping("F");
ping("G");

print("=== INPUT TEST (manual) ===");
STRING $user = input("Enter your name: ", STRING);
print("You typed: " + $user);

print("=== INPUT AS FUNCTION ARGUMENT ===");
VOID hello2(STRING $name) {
    print("Hello " + $name);
}
hello2(input("Your name: ", STRING));

print("=== WRONG TYPE FOR INPUT SPECIFIER (should error) ===");
input("Enter number: ", BOOLEAN);

print("=== FUNCTION WITH NO PARAMETERS ===");
VOID ping2() {
    print("pong");
}
ping2();

print("=== MANY PARAMETERS ===");
VOID mega(STRING $a, STRING $b, STRING $c, STRING $d) {
    print($a + $b + $c + $d);
}
mega("A", "B", "C", "D");

print("=== NESTED FUNCTION DEFINITION (should error unless supported) ===");
VOID outer() {
    VOID inner() {
        print("Inner");
    }
}
