print("===== START TEST =====");

/* BOOLEAN */
BOOLEAN $flag = TRUE;
print($flag);
$flag = FALSE;
print($flag);

/* INT */
INT $counter = 0;
print($counter);
$counter = 5;
print($counter);

/* FLOAT */
FLOAT $pi = 3.14;
print($pi);
$pi = 2.71;
print($pi);

/* CHAR */
CHAR $letter = 'A';
print($letter);
$letter = 'Z';
print($letter);

/* STRING */
STRING $text = "Hello";
print($text);
$text = "World";
print($text);

/* WHILE + INPUT + ASSIGNMENT */
BOOLEAN $running = TRUE;

while ($running) {
    print("---- LOOP START ----");

    INT $num = input("Insert number (0 to stop)");

    if ($num == 0) {
        $running = FALSE;
    }

    print("You entered:");
    print($num);

    /* SHADOWING TEST */
    INT $shadow = 100;
    print($shadow);

    print("---- LOOP END ----");
}

/* VERIFY OUTER VARIABLES STILL VALID */
print("AFTER LOOP");
print($running);
print($counter);
print($text);

/* NESTED WHILE */
INT $i = 0;

while ($i < 3) {
    INT $j = 0;

    while ($j < 2) {
        print("Nested:");
        print($i);
        print($j);
        $j = $j + 1;
    }

    $i = $i + 1;
}

/* FINAL ASSIGNMENT CHECK */
INT $final = 10;
$final = $final + 5;
print($final);

print("===== END TEST =====");
