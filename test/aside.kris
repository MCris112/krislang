// ===============================
// COMPARISONS (==)
// ===============================

IF (5 == 5) {
    print("INT == INT works");
}

IF (5 == 5.0) {
    print("INT == FLOAT works");
}

IF (5.0 == 5) {
    print("FLOAT == INT works");
}

IF (5 == 5.5) {
    print("BUG: 5 == 5.5 should be false");
}

IF ("hello" == "hello") {
    print("STRING == STRING works");
}

IF ("hello" == "world") {
    print("BUG: string mismatch should be false");
}

IF ('A' == 'A') {
    print("CHAR == CHAR works");
}

IF ('A' == 'B') {
    print("BUG: char mismatch should be false");
}

IF (TRUE == TRUE) {
    print("BOOL == BOOL works");
}

IF (TRUE == FALSE) {
    print("BUG: bool mismatch should be false");
}


